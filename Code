<body>
    <div class="container">
        <div class="title">Copy Code</div>

        <div class="code-wrapper">
            <div id="code" class="code-text">HTGSI-2849718274</div>
            <img
                src="https://www.pngwing.com/en/free-png-iqhkl"
                alt="Copy"
                class="copy-btn"
                onclick="copyCode()"
            />
        </div>
    </div>

    <script>
        function copyCode() {
            const text = document.getElementById("code").innerText;
            navigator.clipboard.writeText(text);
        }
    </script>
